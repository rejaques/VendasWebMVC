@model VendasWebMVC.Models.ViewModels.VendedorFormViewModel
@{
    ViewData["Title"] = "Adicionar vendedor";
}

    <h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <p>Nome</p>
                <label asp-for="Vendedor.Name" class="control-label">
                    <input asp-for="Vendedor.Name" class="form-control" />
                </label>
            </div>
            <div class="form-group">
                <p>Email</p>
                <label asp-for="Vendedor.Email" class="control-label">
                    <input asp-for="Vendedor.Email" class="form-control" />
                </label>
            </div>
            <div class="form-group">
                <p>Data de nascimento</p>
                <label asp-for="Vendedor.BirthDate" class="control-label">
                    <input asp-for="Vendedor.BirthDate" class="form-control" />
                </label>
            </div>
            <div class="form-group">
                <p>Salário base</p>
                <label asp-for="Vendedor.BaseSalary" class="control-label">
                    <input asp-for="Vendedor.BaseSalary" class="form-control" />
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DepartamentoId" class="control-label"> </label>
                <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamentos, "Id", "Name"))" class="form-control"> </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-default" />
            </div>
        </form>
    </div>

</div>